{
  "compileOnSave": true,
  "compilerOptions": {
    "watch": false,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "strict": true,
    "esModuleInterop": true
  }
}